{
  "manifest_version": 2,

  "name": "Profit Tracker",
  "description": "Keep in track your Dota 2 bets, and check if you are having profit from your last bets.",
  "version": "1.0",
  //"browser_action" : { "default_icon" : "icon.png"},
  "icons" : { "128" : "icon.png" },
  
  "content_scripts": [
    {
      "matches": ["http://*.dota2lounge.com/mybets"],
      "js": ["profit.js"]
    },
    {
      "matches": ["http://*.dota2lounge.com/myprofile"],
      "js": [ "jquery-2.1.4.min.js", "statistics.js"]
    }
  ],

  "permissions": [
    "storage",
    "http://*.dota2lounge.com/*",
    "http://steamcommunity.com/market/*"
  ]
}